{
  "manifest_version": 2,
  "name": "Unpack",
  "description": "Decodes the selected string encoded in base64 + messagepack.",
  "version": "1.0.0",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_popup": "select.html"
  },
  "web_accessible_resources": [
    "img/*.png"
  ],
  "permissions": [
    "tabs",
    "storage",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "css/popover.min.css"
      ],
      "js": [
        "js/vendor/jquery.min.js",
        "js/vendor/popover.min.js",
        "js/select.js",
        "js/vendor/jquery.mark.min.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}